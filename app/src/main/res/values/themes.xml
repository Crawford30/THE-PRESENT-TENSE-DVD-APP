<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.PresentTense" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerItemBackground">@color/colorBackground</item>
        <item name="drawerItemColorChecked">@color/yellow_500</item>
        <item name="drawerItemColorNormal">@color/gray_900</item>
        <item name="navHeaderTitleColor">@color/black</item>
        <item name="navHeaderDescriptionColor">@color/black</item>
        <item name="drawerBackground">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>


    </style>

    <style name="Theme.NavigationDrawer" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
        <item name="colorControlHighlight">@color/yellow_500</item>
        <item name="colorPrimary">@color/colorPrimaryTwo</item>
    </style>

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/hamburgerBlack</item>
    </style>




</resources>